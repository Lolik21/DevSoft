<Window x:Class="Email_Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Email_Sender"
        mc:Ignorable="d"
        Title="Email Sender" Height="350" Width="521.392">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" x:Name="tbTo" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" x:Name="tbSubject" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />
        <TextBox Grid.Column="0" Grid.Row="2" Grid.RowSpan="3" x:Name="tbText" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />


    </Grid>
</Window>
